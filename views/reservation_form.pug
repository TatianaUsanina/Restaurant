extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Input your name' name='name' required='true' value=(underfined===reservation ? '' : reservation.customer.name))
      
    div.form-group
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text', placeholder='Input your famile name' name='family_name' required='true' value=(underfined===reservation ? '' : reservation.customer.family_name))
    
    div.form-group
    label(for='table') Table:
    select#book.form-control(type='select' placeholder='Select table' name='table' required='true' value=(underfined===reservation ? '' : reservation.table.number))
        each table in table_list
          option(value=table.number) #{table.number}

    div.form-group
      lable(for='phone') Phone:
      input#phone.form-control(type="text", placeholder='Input your phone number(not necessarily)' name='phone' value=(underfined===reservation ? '' : reservation.customer.phone))

    div.form-group
      lable(for='email') Email:
      input#phone.form-control(type="text", placeholder='Input your email' name='email' require='true' value=(underfined===reservation ? '' : reservation.customer.email))

    div.form-group
      lable(for='date') Date:
      input#phone.form-control(type="datetime-local",  name='date' value=(underfined===reservation ? '' : reservation.date))

    button.btn.btn-primary(type='submit') Submit


  if errors
   ul
    for error in errors
     li!= error.msg